clouds:
  {{region}}:
    region_name: {{region}}
    identity_api_version: 3
    auth:
{% with ep=endpoints.identity.auth.admin %}
      username: {{ep.username}}
      project_name: {{ep.project_name}}
      project_domain_name: {{ep.project_domain_name}}
      user_domain_name: {{ep.user_domain_name}}
{% endwith %}
      password: {{identity_admin_pwd}}
{% if multi_region.master %}
      auth_url: 'http://{{endpoints.identity.host_fqdn_override.public.host}}/v3'
{% else %}
      auth_url: '{{keystone_endpoint.auth_url}}'
{% endif %}
