pod:
  lifecycle:
    upgrades:
      daemonsets:
        pod_replacement_strategy: RollingUpdate
        node_exporter:
          enabled: true
          min_ready_seconds: 0
      revision_history: 3
      pod_replacement_strategy: RollingUpdate
      rolling_update:
        max_unavailable: 1
        max_surge: 3
    termination_grace_period:
      node_exporter:
        timeout: 30
  resources:
    enabled: {{pod_resources}}
    node_exporter:
      requests:
        memory: "128Mi"
        cpu: "100m"
      limits:
        memory: "1024Mi"
        cpu: "2000m"
    jobs:
      image_repo_sync:
        requests:
          memory: "128Mi"
          cpu: "100m"
        limits:
          memory: "1024Mi"
          cpu: "2000m"
  tolerations:
    node_exporter:
      enabled: true

conf:
  ntp_server_ip: {{ntp_srv| default('127.0.0.1')}}
  collectors:
    enable:
      - ntp
      - meminfo_numa
      - bonding
      - mountstats
    disable:
